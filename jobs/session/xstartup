#!/bin/bash

if [ -e $HOME/.Xresources ]; then
  xrdb $HOME/.Xresources
fi
xsetroot -solid grey

export XSTARTUP_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
/usr/bin/fvwm -f ${XSTARTUP_DIR}/fvwm/fvwmrc &

. /etc/profile.d/lmod.sh
module use /nfs/gpfs/PZS0645/local-ruby/share/modulefiles
module load wine
module use /nfs/gpfs/PZS0645/local-ruby/emc2/share/modulefiles
module load vft/i686

cd ${VFT_HOME}
WINEPREFIX=~/.wine-vft VFTHOME="Z:\\${HOME}" MATDIR="${MATDIR}" wine Project2.exe

vncserver -kill ${DISPLAY}
