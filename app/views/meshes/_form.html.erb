<%# Uses rails_bootstrap_form gem. API at: https://github.com/bootstrap-ruby/rails-bootstrap-forms %>
<%= bootstrap_form_for(mesh) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :name %>
  <%= f.number_field :version %>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  <%= f.button 'Reset', type: :reset, class: 'btn btn-default' %>

  <hr>

  <%= link_to 'Back', meshes_path, class: 'btn btn-default' %>
  <%= link_to 'Show', mesh, class: 'btn btn-primary' unless mesh.new_record? %>
<% end %>
