<%= bootstrap_form_tag url: submit_thermal_path(session.thermal), method: 'put', remote: true do |f| %>
  <%= f.number_field :hours, value: 1, in: 1..96, class: 'hours-form', hide_label: true, prepend: 'Hours:', append: f.submit('Submit', class: 'btn btn-success launch-btn')%>
<% end %>
<%= link_to icon('check-square-o', 'Force Validate'), submit_thermal_path(session.thermal, {validate: true}), method: :put, class: 'btn btn-default btn-sm launch-btn btn-fixwidth', remote: true %>
