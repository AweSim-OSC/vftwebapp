<% render 'navbar' %>
<div class="page-header">
  <h2>Listing Sessions</h2>
</div>

<table class="table data-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Status</th>
      <th>Name</th>
      <th>Version</th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.id %></td>
        <td><%= status_label(session) %></td>
        <td><%= session.name %></td>
        <td><%= session.version %></td>
        <td><%= link_to 'Submit', submit_session_path(session), method: :put, class: 'btn btn-success btn-sm' unless session.submitted? %></td>
        <td><%= link_to 'Show', session, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_session_path(session), class: 'btn btn-default btn-sm' unless session.submitted? %></td>
        <td><%= link_to 'Copy', copy_session_path(session), method: :put, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', session, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
